<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/afegir_element_personalitzat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardCornerRadius="0px"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="1dp"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/marge_gran"
            android:paddingEnd="@dimen/marge_gran"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:clickable="false"
            android:focusable="false"
            >

            <ImageView
                android:id="@+id/generic_list_element_imatge"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="false"
                android:focusable="false"
                android:src="@drawable/ic_add_verd"
                android:contentDescription="@string/afegir_element_personalitzat"/>

            <TextView
                android:id="@+id/generic_list_element_nom"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/marge_gran"
                android:layout_marginEnd="@dimen/marge_gran"
                android:layout_toEndOf="@+id/generic_list_element_imatge"
                android:layout_toStartOf="@id/generic_list_element_extra"
                android:gravity="center|start"
                android:scrollHorizontally="false"
                android:clickable="false"
                android:focusable="false"
                android:textStyle="bold"
                android:text="@string/afegir_element_personalitzat" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/llista_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"/>
    <TextView
        android:id="@+id/llista_no_resultats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marge_gran"
        android:text="@string/no_resultat_recepta"
        android:gravity="center"
        android:visibility="gone"/>
</LinearLayout>
